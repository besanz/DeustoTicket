<?xml version="1.0" encoding="UTF-8"?>
<jdoconfig xmlns="http://xmlns.jcp.org/xml/ns/jdo/jdoconfig"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="http://xmlns.jcp.org/xml/ns/jdo/jdoconfig">

    <persistence-manager-factory name="myPersistenceManagerFactory">
        <property name="javax.jdo.PersistenceManagerFactoryClass"
                  value="org.datanucleus.api.jdo.JDOPersistenceManagerFactory"/>
        <property name="javax.jdo.option.ConnectionURL"
                  value="jdbc:mysql://localhost:3306/your_database?useSSL=false"/>
        <property name="javax.jdo.option.ConnectionDriverName"
                  value="com.mysql.cj.jdbc.Driver"/>
        <property name="javax.jdo.option.ConnectionUserName"
                  value="your_username"/>
        <property name="javax.jdo.option.ConnectionPassword"
                  value="your_password"/>
        <property name="datanucleus.autoCreateSchema" value="true"/>
        <property name="datanucleus.autoCreateTables" value="true"/>
    </persistence-manager-factory>

</jdoconfig>
